<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="55dp"
        android:padding="10dp"
        android:isScrollContainer="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Bench Press Card Layout!-->
           <android.support.v7.widget.CardView
               xmlns:card_view="http://schemas.android.com/apk/res-auto"
               android:id="@+id/benchPressCV"
               android:layout_gravity="center"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               card_view:cardCornerRadius="4dp">

               <!--layout for bench press card view !-->
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <TextView
                       android:id="@+id/benchPressHeaderTV"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerHorizontal="true"
                       android:text="@string/benchPress"
                       android:textColor="#303233"
                       android:textSize="20sp"/>

                   <LinearLayout
                       android:layout_width="270dp"
                       android:layout_height="wrap_content"
                       android:layout_below="@id/benchPressHeaderTV"
                       android:layout_marginTop="10dp"
                       android:layout_marginLeft="17dp"
                       android:orientation="horizontal"
                       android:weightSum="2">

                       <EditText
                           android:id="@+id/repsET"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:gravity="center"
                           android:hint="@string/reps"
                           android:maxLength="3"
                           android:background="@null"
                           android:textColor="#303233"
                           android:textSize="20sp"
                           android:ems="2"
                           android:singleLine="true"
                           android:inputType="number"
                           android:layout_weight="1"
                           android:nextFocusDown="@+id/weightET"/>

                       <TextView
                           android:id="@+id/repsTV"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginLeft="-30dp"
                           android:text="@string/reps"
                           android:textSize="20sp"
                           android:textColor="#303233"
                           android:visibility="invisible"/>

                       <TextView
                           android:id="@+id/forTV"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/forHowMany"
                           android:layout_marginLeft="10dp"
                           android:textSize="20sp"
                           android:textColor="#303233"
                           android:visibility="invisible"/>

                       <EditText
                           android:id="@+id/weightET"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:gravity="center"
                           android:layout_marginLeft="-30dp"
                           android:hint="@string/weight"
                           android:background="@null"
                           android:maxLength="6"
                           android:textColor="#303233"
                           android:textSize="20sp"
                           android:ems="3"
                           android:singleLine="true"
                           android:inputType="number"
                           android:layout_weight="1"/>

                       <TextView
                           android:id="@+id/weightTV"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginRight="10dp"
                           android:layout_marginLeft="-40dp"
                           android:text="@string/kgs"
                           android:textSize="20sp"
                           android:textColor="#303233"
                           android:visibility="invisible"/>

                   </LinearLayout>

               </RelativeLayout>

           </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>

    <!-- Floating Action button !-->
    <include layout="@layout/floating_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="30dp"/>


</RelativeLayout>